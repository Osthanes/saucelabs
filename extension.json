{
    "id": "ibm.devops.services.pipeline.saucelabs",
    "version": 1,
    "name_key": "ExtName",
    "desc_key": "ExtDesc",
    "extension_type": "Test",
    "message_key": "ExtMessage",
    "inputs": [
        {
            "type": "Bluemix",
            "inclusion" : "always"
        }
    ],
    "params": [
        {
            "name": "USER_ID",
            "type": "Text",
            "required": "true",
            "default_value": "",
            "label_key": "USER_ID_KEY"
        },
        {
            "name": "ACCESS",
            "type": "Text",
            "required": "true",
            "default_value": "",
            "label_key": "ACCESS_KEY"
        },
        {
            "name": "COMMAND",
            "type": "TextArea",
            "required": "true",
            "default_value": "#!/bin/bash
#Please uncomment the configuration that best fits your test set up
#or feel free to add your own
            
#npm test
#RESULT=$?
#if [ $RESULT -ne 0 ]; then
#exit 1
#fi
            
#grunt test
#RESULT=$?
#if [ $RESULT -ne 0 ]; then
#exit 1
#fi
            
#grunt
#RESULT=$?
#if [ $RESULT -ne 0 ]; then
#exit 1
#fi
            
#Insert custom command:
            
#RESULT=$?            
#if [ $RESULT -ne 0 ]; then
#exit 1
#fi",
            "label_key": "COMMAND_KEY",
            "desc_key": "COMMAND_DESC"
        }    
    ],
    "outputs": [
        {
            "type": "Artifacts",
            "inclusion" : "always"
        }
    ],
    "execution": {
        "type": "JenkinsDocker",
        "shell": "#!/bin/bash
set +x
set +e 
export INIT_START_TIME=$(date +\"%s\")

export SAUCE_USERNAME=#USER_ID#
export SAUCE_ACCESS_KEY=#ACCESS#
        
. $EXT_DIR/_init.sh
INIT_END_TIME=$(date +\"%s\")
INIT_EST_TIME=$(($INIT_END_TIME-$INIT_START_TIME))
echo -e \"Init runtime of `date -u -d @\"$INIT_EST_TIME\" +\'%-Mm %-Ss\'`\"
        
npm install

/bin/bash -e #COMMAND#"
RESULT=$?
    
if [ $RESULT -ne 0 ]; then
${EXT_DIR}/sauce.py && exit 1
else
${EXT_DIR}/sauce.py
RESULT=$?
if [ $RESULT -ne 0 ]; then
exit 1
fi
fi

"
    },
    "project": "https://hub.jazz.net/project/alchemy/Alchemy-Ostanes",
    "project_example": "https://hub.jazz.net/pipeline/Osthanes/blazemeter_static",
    "project_contact": "elobeto@us.ibm.com"
}
