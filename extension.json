{
    "id": "ibm.devops.services.pipeline.saucelabs",
    "version": 1,
    "name_key": "ExtName",
    "desc_key": "ExtDesc",
    "extension_type": "Test",
    "message_key": "ExtMessage",
    "inputs": [
        {
            "type": "Bluemix",
            "inclusion" : "always"
        }
    ],
    "params": [
        {
            "name": "USER_ID",
            "type": "Text",
            "required": "true",
            "default_value": "",
            "label_key": "USER_ID_KEY",
            "desc_key": "USER_ID_DESC"
        },
        {
            "name": "ACCESS",
            "type": "Text",
            "required": "true",
            "default_value": "",
            "label_key": "ACCESS_KEY",
            "desc_key": "ACCESS_KEY_DESC"
        },
        {
            "name": "SELECT_CMD",
            "type": "Select",
            "required": "true",
            "default_value": "ANY",
            "label_key": "SELECT_CMD_KEY",
            "desc_key": "SELECT_CMD_DESC",
            "options": [
                {
                    "label_key": "NPM_KEY",
                    "value": "npm test"
                },
                { 
                    "label_key": "GRUNT_KEY",
                    "value": "grunt" 
                },
                { 
                    "label_key": "GRUNT_T_KEY",
                    "value": "grunt test"
                },
                {
                    "label_key": "ANT_KEY",
                    "value": "ant test"
                },
                {
                    "label_key": "MVN_KEY",
                    "value": "mvn test"
                },
                {
                    "label_key": "CUSTOM_KEY",
                    "value": "custom"
                }
            ]
        },
        {
            "name": "COMMAND",
            "type": "TextArea",
            "required": "true",
            "default_value" : "#!/bin/bash
",
            "label_key": "COMMAND_KEY",
            "desc_key": "COMMAND_DESC"
        }
    ],
    "outputs": [
        {
            "type": "Artifacts",
            "inclusion" : "always"
        },
        {
            "type": "Tests",
            "inclusion": "optional"
        }
    ],
    "execution": {
        "type": "JenkinsDocker",
        "shell": "#!/bin/bash
set +x
set +e 
export INIT_START_TIME=$(date +\"%s\")

export SAUCE_USERNAME=#USER_ID#
export SAUCE_ACCESS_KEY=#ACCESS#
export CMD_CHOICE=\"#SELECT_CMD#\"

function custom_cmd {
    eval #COMMAND#
    RESULT=$?
    ${EXT_DIR}/sauce.py
    PY_RES=$?
    if [ $RESULT -ne 0 ] || [ $PY_RES -ne 0 ]; then
        exit 1
    fi
}
    
export -f custom_cmd
        
. $EXT_DIR/_init.sh
INIT_END_TIME=$(date +\"%s\")
INIT_EST_TIME=$(($INIT_END_TIME-$INIT_START_TIME))
echo -e \"Init runtime of `date -u -d @\"$INIT_EST_TIME\" +\'%-Mm %-Ss\'`\"
        
. $EXT_DIR/execute.sh
RESULT=$?
        
zip selenium_logs.zip selenium-server-*
zip videos.zip video-*
mv selenium_logs.zip $ARCHIVE_DIR
mv videos.zip $ARCHIVE_DIR
        
if [ $RESULT -ne 0 ]; then
    exit 1
fi
        
"
    },
    "project": "https://hub.jazz.net/project/alchemy/Alchemy-Ostanes",
    "project_example": "https://hub.jazz.net/pipeline/Osthanes/blazemeter_static",
    "project_contact": "elobeto@us.ibm.com"
}
}
}
