{
    "id": "ibm.devops.services.pipeline.saucelabs",
    "version": 1,
    "name_key": "ExtName",
    "desc_key": "ExtDesc",
    "extension_type": "Test",
    "message_key": "ExtMessage",
    "inputs": [
        {
            "type": "Bluemix",
            "inclusion" : "always"
        }
    ],
    "params": [
        {
            "name": "USER_ID",
            "type": "Text",
            "required": "true",
            "default_value": "",
            "label_key": "USER_ID_KEY"
        },
        {
            "name": "ACCESS",
            "type": "Text",
            "required": "true",
            "default_value": "",
            "label_key": "ACCESS_KEY"
        },
        {
            "name": "SELECT_CMD",
            "type": "Select",
            "required": "true",
            "default_value": "ANY",
            "label_key": "SELECT_CMD_KEY",
            "desc_key": "SELECT_CMD_DESC",
            "options": [
                {
                    "label_key": "NPM_KEY",
                    "value": "npm test"
                },
                { 
                    "label_key": "GRUNT_KEY",
                    "value": "grunt" 
                },
                { 
                    "label_key": "GRUNT_T_KEY",
                    "value": "grunt test"
                }
            ]
        },
        {
            "name": "COMMAND",
            "type": "TextArea",
            "required": "true",
            "default_value" : "#!/bin/bash
",
            "label_key": "COMMAND_KEY",
            "desc_key": "COMMAND_DESC"
        }
    ],
    "outputs": [
        {
            "type": "Artifacts",
            "inclusion" : "always"
        }
    ],
    "execution": {
        "type": "JenkinsDocker",
        "shell": "#!/bin/bash
set +x
set +e 
export INIT_START_TIME=$(date +\"%s\")

export SAUCE_USERNAME=#USER_ID#
export SAUCE_ACCESS_KEY=#ACCESS#
        
. $EXT_DIR/_init.sh
INIT_END_TIME=$(date +\"%s\")
INIT_EST_TIME=$(($INIT_END_TIME-$INIT_START_TIME))
echo -e \"Init runtime of `date -u -d @\"$INIT_EST_TIME\" +\'%-Mm %-Ss\'`\"

javaCmd=#COMMAND#
cmdLen=${#javaCmd}
if [ $cmdLen -gt 11 ]; then
    #run java cmd
    /bin/bash -e #COMMAND#
    ${EXT_DIR}/sauce.py
    PY_RES=$?
else
    #node
    npm install
    eval #SELECT_CMD#
    RESULT=$?
    ${EXT_DIR}/sauce.py
    PY_RES=$?
    if [ $RESULT -ne 0 ] || [$PY_RES -ne 0 ]; then
        exit 1
    fi
fi

"
    },
    "project": "https://hub.jazz.net/project/alchemy/Alchemy-Ostanes",
    "project_example": "https://hub.jazz.net/pipeline/Osthanes/blazemeter_static",
    "project_contact": "elobeto@us.ibm.com"
}
